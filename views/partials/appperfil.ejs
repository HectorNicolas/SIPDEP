<!--Panel del perfil-->
<div class="container center">
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="app-login-title panel-title">Perfil</h2>
        </div>

        <div class="panel-body">
            <% if (typeof(errorMessage) != 'undefined' && errorMessage.length > 0) { %>
                <div class="alert alert-danger">
                    <%= errorMessage %>
                </div>
                <% } %>
                    <% if (typeof(succesfulMessage) != 'undefined' && succesfulMessage.length > 0) { %>
                        <div class="alert alert-success">
                            <%= succesfulMessage %>
                        </div>
                        <% } %>
                            <form class="form-horizontal" role="form" method="post" action="/perfil">
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        <label class="control-label">Nombre</label>
                                        <input type="text" class="form-control" name="nombre" value="<%=datos[0].Nombre%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        <label class="control-label">Apellidos</label>
                                        <input type="text" class="form-control" name="apellidos" value="<%=datos[0].Apellidos%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        <label class="control-label">Tel√©fono</label>
                                        <input type="text" class="form-control" name="telefono" value="<%=datos[0].Telefono%>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        <label class="control-label">Correo</label>
                                        <input type="text" class="form-control" name="correo" value="<%=datos[0].Correo%>">
                                    </div>
                                </div>
                                <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <button type="submit" class="btn btn-primary">Actualizar</button>
                                </div>
                            </form>
        </div>
        <!--Panel body-->
    </div>
    <!--Panel-->
</div>
<!--Container-->