<head>
    <% include partials/head.ejs %>
</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
            <![endif]-->
    <% include partials/usermenu.ejs %>

        <div class="container-fluid">
            <p class="app-top">Solicitar test</p>
            <div class="container-fluid">
                <%if(errorMessage.length > 0){%>
                    <div class="alert alert-danger">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>¡Error!</strong>
                        <%=errorMessage%>
                    </div>
                    <%}%>
                        <%if(succesfulMessage.length > 0){%>
                            <div class="alert alert-success">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                <strong>¡Correcto!</strong>
                                <%=succesfulMessage%>
                            </div>
                            <%}%>
                                <br>
                                <form action="/solicitar" method="post">
                                    <% if(typeof(test) != 'undefined'){%>
                                        <%for(i=0; i<test.length;i++){%>
                                            <div class="panel panel-default">
                                                <div class="panel-heading">
                                                    <h2 class="panel-title">

                                            Solicitar test
                                        </h2>

                                                </div>
                                                <div class="panel-body">

                                                    <div class="form-group">
                                                        <label for="">Selecciona el test que quieres solicitar</label>
                                                        <select name="test" class="form-control">
                                                            <option disabled selected>
                                                                Selecciona un test
                                                            </option>
                                                            <%if(typeof(test) != 'undefined'){
                                                                for(i=0;i<test.length;i++){%>
                                                                <option>
                                                                    <%=test[i].Nombre%>
                                                                </option>
                                                                <%}%>
                                                                    <%}%>
                                                        </select>
                                                    </div>

                                                    <div class="form-group">
                                                        <label>Ingresa el nombre del aplicador</label>
                                                        <input type="text" name="aplicador" class="form-control" placeholder="Ingresa el nombre del aplicador" required oninput="validateUsername(this)">

                                                    </div>
                                                </div>
                                                <div class="panel-footer">
                                                    <div class="row">
                                                        <div class="col-sm-2 col-md-1 col-lg-1">
                                                            <button class="btn btn-primary" type="submit">Solicitar</button>
                                                        </div>
                                                        <div class="col-sm-6 col-md-5 col-lg-5">


                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <%}%>
                                                <%}else{%>
                                                    <div class="jumbotron">
                                                        <h3><strong>No hay test disponibles</strong></h3>
                                                        <div class="alert alert-info">
                                                            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a> Espera a que los aplicadores agreguen un nuevo test.
                                                        </div>
                                                    </div>
                                                    <%}%>
                                </form>
            </div>
        </div>

        <% include partials/footer.ejs %>
            <script>
                window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')
            </script>
            <script src="js/vendor/bootstrap.min.js"></script>
            <script src="js/main.js"></script>
</body>

</html>