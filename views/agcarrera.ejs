<head>
    <% include partials/head.ejs %>
</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
            <![endif]-->

    <% if(priv == 'app'){ %>
        <% include partials/appmenu.ejs %>
            <%}else{%>
                <% include partials/usermenu.ejs %>
                    <%}%>

                        <div class="container">
                            <form action="/selfacultad" method="get" class="form-inline" role="form">
                                <div class="form-group">
                                    <br>
                                    <label>Selecciona la facultad:</label>
                                    <select name="facultad" onchange="this.form.submit()" class="form-control">
                                        <option disabled selected>
                                            Selecciona la facultad
                                        </option>
                                        <%for(i=0;i<facultades.length;i++){%>
                                            <%if(facultades[i].Nombre == facSeleccionada){%>
                                                <option selected>
                                                    <%=facultades[i].Nombre%>
                                                </option>
                                                <%}else{%>
                                                    <option>
                                                        <%=facultades[i].Nombre%>
                                                    </option>
                                                    <%}}%>
                                    </select>
                                </div>
                            </form>
                        </div>

                        <div class="container app-registro center">
                            <br>

                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h2 class="panel-title">
                                       Agregar carrera
                                   </h2>
                                </div>
                                <div class="panel-body">
                                    <% if (errorMessage.length > 0) { %>
                                        <div class="alert alert-danger">
                                            <%= errorMessage %>
                                        </div>
                                        <% } %>
                                            <% if (succesfulMessage.length > 0) { %>
                                                <div class="alert alert-success">
                                                    <%= succesfulMessage %>
                                                </div>
                                                <% } %>
                                                    <form action="/agcarrera" method="post" role="form" class="form form-horizontal">
                                                        <div class="form-group row">
                                                            <div class="col-sm-12 col-md-12 col-lg-12">
                                                                <label>
                                                                    Facultad seleccionada:
                                                                    <%=facSeleccionada%>
                                                                </label>
                                                                <input type="hidden" class="form-control" name="facSeleccionada" value="<%=facSeleccionada%>">
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <div class="col-sm-12 col-md-12 col-lg-12">
                                                                <label>
                                                                    Ingresa el nombre de la carrera
                                                                </label>
                                                                <input type="text" required class="form-control" name="nombre">
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <div class="col-sm-12 col-md-12 col-lg-12">
                                                                <button class="btn btn-primary" type="submit">
                                                                    Agregar
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                </div>

                            </div>

                        </div>

                        <% include partials/footer.ejs %>
                            <script>
                                window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')
                            </script>
                            <script src="js/vendor/bootstrap.min.js"></script>
                            <script src="js/main.js"></script>
</body>

</html>