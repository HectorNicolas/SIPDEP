    <div class="container">
        <br>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Cambio de contraseña</h2>
            </div>
			<form class="form-horizontal" id="passChangeFormApp" method="post" action="/cambiarapp">
            <div class="panel-body">
                <% if (errorMessage.length > 0) { %>
                    <div class="alert alert-danger">
                            <%= errorMessage %>
                    </div>
                <% } %>
                <% if (succesfulMessage.length > 0) { %>
                    <div class="alert alert-success">
                        <%= succesfulMessage %>
                    </div>
                <% } %>
                <div class="form-group row">
                    <div class="col-xs-12">
                        <label class="control-label" for="oldpassword">Contraseña Anterior:</label>                    
                        <input type="password" required class="form-control" id="oldpasswordapp"  name="oldpasswordapp" placeholder="Contraseña Anterior"value="">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-xs-12">
                        <label class="control-label" for="newpassword">Nueva Contraseña:</label>                    
                        <input type="password" required class="form-control" id="newpasswordapp" name="newpasswordapp" placeholder="Nueva Contraseña" value="">
                    </div>
                </div>				
                <div class="form-group row">
                    <div class="col-xs-12">
                        <label class="control-label" for="newpassword2">Confirmar Contraseña:</label>                    
                        <input type="password" required class="form-control" id="newpassword2app" name="newpassword2app" placeholder="Confirma tu contraseña" value="">
                    </div>
				</div>				
                <div class="form-group">
                    <div class="col-xs-12">
                        <button type="submit" id="submitChangePasswordapp" class="btn btn-primary">Confirmar</button>
                    </div>
                </div>		
            </div>
			</form>
        </div>
    </div>
            
