            <![endif]-->

    <% include partials/appmenu.ejs %>
        <!-- Panel del nuevo aplicador -->
        <div class="container center app-registro">
            <br>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="app-login-title panel-title">Eliminar test</h2>
                </div>

                <div class="panel-body">
                    <% if (typeof(errorMessage) != 'undefined' && errorMessage.length > 0) { %>
                        <div class="alert alert-danger">
                            <%= errorMessage %>
                        </div>
                        <% } %>
                            <% if (typeof(succesfulMessage) != 'undefined' && succesfulMessage.length > 0) { %>
                                <div class="alert alert-success">
                                    <%= succesfulMessage %>
                                </div>
                                <% } %>
                                    <form class="form-horizontal" role="form" method="post" action="/eliminartest">
                                        <div class="form-group">
                                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                <select name="test" class="form-control">
                                                    <option disabled selected>
                                                        Selecciona un test
                                                    </option>
                                                    <%if(typeof(test) != 'undefined'){
                                                        for(i=0;i<test.length;i++){%>
                                                        <option>
                                                            <%=test[i].Nombre%>
                                                        </option>
                                                        <%}}%>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <button type="submit" class="btn btn-primary">Eliminar</button>
                                        </div>
                                    </form>
                </div>
                <!--Panel body-->
            </div>
            <!--Panel-->
        </div>

        <% include partials/footer.ejs %>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
            <script>
                window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')
            </script>
            <script src="js/vendor/bootstrap.min.js"></script>
            <script src="js/main.js"></script>
</body>

</html>