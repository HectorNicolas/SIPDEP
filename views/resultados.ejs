<!--<![endif]-->

<head>
    <% include partials/head.ejs %>
</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
            <![endif]-->

    <% if(priv == 'app'){ %>
        <% include partials/appmenu.ejs %>
            <%}%>

                <% if (errorMessage.length > 0) { %>
                    <tr>
                        <th class="alert alert-danger">
                            <%= errorMessage %>
                        </th>
                    </tr>
                    <% } %>
                        <% if (succesfulMessage.length > 0) { %>
                            <tr>
                                <th class="alert alert-success">
                                    <%= succesfulMessage %>
                                </th>
                            </tr>
                            <% } %>

                                <%if(typeof(reporte) != 'undefined'){%>
                                    <form action="/imprimir" method="get" id="Imprimir">
                                        <input type="hidden" name="folio" value="<%=reporte[0].Folio%>">
                                    </form>
                                    <div class="container">
                                        <br>
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h2 class="panel-title">
                                                   Resultados para el Folio: <%=reporte[0].Folio%>
                                                </h2>
                                            </div>
                                            <div class="panel-body">
                                                <div class="row">
                                                    <div class="col-sm-4 col-md-4 col-lg-4">
                                                        <strong>Nombre del test: </strong>
                                                        <%=reporte[0].Nombre_Test%>
                                                    </div>
                                                    <div class="col-sm-4 col-md-4 col-lg-4">
                                                        <strong>Aplicador: </strong>
                                                        <%=reporte[0].NombreAp + ' ' + reporte[0].ApellidosAp%>
                                                    </div>
                                                    <div class="col-sm-4 col-md-4 col-lg-4">
                                                        <strong>Contestado por: </strong>
                                                        <%=reporte[0].NombreUs + ' ' + reporte[0].ApellidosUs%>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-4 col-md-4 col-lg-4">
                                                        <strong>Fecha de solicitud: </strong>
                                                        <%=reporte[0].FechaSol%>
                                                    </div>
                                                    <div class="col-sm-4 col-md-4 col-lg-4">
                                                        <strong>Fecha en que fue contestado:</strong>
                                                        <%=reporte[0].FechaCon%>
                                                    </div>
                                                    <div class="col-sm-4 col-md-4 col-lg-4">
                                                    </div>
                                                </div>
                                                <br>
                                                <table class="table table-striped table-hover table-responsive">
                                                    <thead>
                                                        <tr>
                                                            <th>Pregunta</th>
                                                            <th>Respuesta</th>
                                                            <th>Puntuación Individual</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <%  if (typeof(preguntas) != 'undefined' ){%>
                                                            <% for(i=0;i<preguntas.length;i++){ %>
                                                                <tr>
                                                                    <th>
                                                                        <%=preguntas[i].Pregunta%>
                                                                    </th>
                                                                    <th>
                                                                        <%=preguntas[i].Respuesta%>
                                                                    </th>
                                                                    <th>
                                                                        <%=preguntas[i].Puntuacion%>
                                                                    </th>
                                                                </tr>
                                                                <% } %>
                                                                    <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="panel-footer">
                                                <div class="row">
                                                    <div class="col-sm-4 col-md-4 col-lg-4">
                                                        <button class="btn btn-primary" type="submit" form="Imprimir">Imprimir</button>
                                                    </div>
                                                    <div class="col-sm-4 col-md-4 col-lg-4"><strong>Dianostico: </strong>
                                                        <%=reporte[0].Diagnostico%>
                                                    </div>
                                                    <div class="col-sm-4 col-md-4 col-lg-4"><strong>Puntuación total: </strong>
                                                        <%=reporte[0].PuntuacionTotal%>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <%}%>

                                        <% include partials/footer.ejs %>
                                            <script>
                                                window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')
                                            </script>
                                            <script src="js/vendor/bootstrap.min.js"></script>
                                            <script src="js/main.js"></script>
</body>

</html>