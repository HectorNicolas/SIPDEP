    <% include partials/appmenu.ejs %>

        <div class="container app-registro center">
            <br>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">
                                Nuevo test individual
                            </h2>
                </div>
                <form method="post" role="form">
                    <div class="panel-body">
                        <% if (errorMessage.length > 0) { %>
                            <div class="alert alert-danger">
                                <%= errorMessage %>
                            </div>
                            <% } %>
                                <% if (succesfulMessage.length > 0) { %>
                                    <div class="alert alert-success">
                                        <%= succesfulMessage %>
                                    </div>
                                    <% } %>
                                        <div class="form-group">
                                            <label for="test">Selecciona el test:</label>
                                            <select class="form-control" id="test" name="test" required>
                                                <% if(typeof(test) != 'undefined'){ %>
                                                    <% for(i=0;i<test.length;i++){ %>
                                                        <option>
                                                            <%= test[i].Nombre %>
                                                        </option>
                                                        <% } }%>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Ingresa el nombre del usuario al que aplicar√°s el test: </label>
                                            <input type="text" class="form-control" name="username" oninput="validateUsername(this)" required>
                                        </div>
                    </div>
                    <div class="panel-footer">
                        <button class="btn btn-primary" type="submit">
                            Aplicar test
                        </button>
                    </div>
                </form>
            </div>
        </div>


        <% include partials/footer.ejs %>
