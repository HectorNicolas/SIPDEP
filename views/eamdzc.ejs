<html class="no-js" lang="">
<!--<![endif]-->

<head>
    <% include partials/head.ejs %>
</head>

<body>
    <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
            <![endif]-->
    <br>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11">
                            <form role="form" method="post" action="/enviar_eamdzc">
                                <div class="jumbotron">
                                    <h1 class="app-top app-login-title">
                                        Escala Autoaplicada para la Medida de la Depresión de Zung y Conde
                                    </h1>
                                    <p>Instrucciones: A continuación se expresan varias respuestas posibles a cada uno de los 20 apartados. Detrás de cada frase seleccione la casilla que mejor refleje su situación actual.</p>
                                    <input type="hidden" name="fechaAplicacion" value="<%=datos[3]%>">
                                    <input type="hidden" name="username" value="<%=datos[2]%>">
                                    <input type="hidden" name="aplicador" value="<%=datos[1]%>">
                                    <input type="hidden" name="test" value="<%=datos[0]%>">
                                </div>
                                <div class="form-group">
                                    <table class="table table-striped">
                                        <tr>
                                            <td>
                                            </td>
                                            <td>
                                                Muy poco tiempo, muy pocas veces, raramente
                                            </td>
                                            <td>
                                                Algún tiempo, algunas veces, de vez en cuando
                                            </td>
                                            <td>
                                                Gran parte del tiempo, muchas veces, frecuentemente
                                            </td>
                                            <td>
                                                Casi siempre, siempre, casi todo el tiempo
                                            </td>
                                        </tr>
                                        <%if(typeof(preguntas) != 'undefined'){%>
                                            <%for(i=0;i<preguntas.length;i++){%>
                                                <tr>
                                                    <td>
                                                        <%=preguntas[i].Pregunta%>
                                                            <%var sResp = 'resp' + (i+1).toString(10);%>
                                                    </td>
                                                    <%if(i==0 || i==2 || i==3 || i==6 || i==7 || i==8 || i==9 || i==12 || i==14 || i==18){%>
                                                        <td>
                                                            <input required name="<%=sResp%>" type="radio" value="1.Muy poco tiempo, muy pocas veces, raramente" />
                                                        </td>
                                                        <td>
                                                            <input required name="<%=sResp%>" type="radio" value="2.Algún tiempo, algunas veces, de vez en cuando" />
                                                        </td>
                                                        <td>
                                                            <input required name="<%=sResp%>" type="radio" value="3.Gran parte del tiempo, muchas veces, frecuentemente" />
                                                        </td>
                                                        <td>
                                                            <input required name="<%=sResp%>" type="radio" value="4.Casi siempre, siempre, casi todo el tiempo" />
                                                        </td>
                                                        <%}else{%>
                                                            <td>
                                                                <input required name="<%=sResp%>" type="radio" value="4.Muy poco tiempo, muy pocas veces, raramente" />
                                                            </td>
                                                            <td>
                                                                <input required name="<%=sResp%>" type="radio" value="3.Algún tiempo, algunas veces, de vez en cuando" />
                                                            </td>
                                                            <td>
                                                                <input required name="<%=sResp%>" type="radio" value="2.Gran parte del tiempo, muchas veces, frecuentemente" />
                                                            </td>
                                                            <td>
                                                                <input required name="<%=sResp%>" type="radio" value="1.Casi siempre, siempre, casi todo el tiempo" />
                                                            </td>
                                                            <%}%>
                                                </tr>
                                                <%}}%>
                                    </table>
                                </div>
                                <button class="btn btn-primary" type="submit">Enviar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Panel-->
    </div>
    <!--Container-->

    <script>
        window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')
    </script>
    <script src="js/vendor/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
</body>

</html>