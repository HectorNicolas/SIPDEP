    <% include partials/appmenu.ejs %>

        <div class="container">
            <h2>Carreras</h2>
            <div class="container">
                <form action="/searchcarreras" class="form-inline" method="get" role="form">
                    <div class="form-group row">
                        <label>
                            Selecciona la facultad de la que quieres consutar las carreras
                        </label>
                        <select name="facultadSeleccionada" onchange="this.form.submit()" class="form-control">
                            <option selected disabled>
                                Selecciona una facultad
                            </option>
                            <%for(i=0;i<facultades.length;i++){%>
                                <%if(facultades[i].Nombre == facultadSeleccionada){%>
                                    <option selected>
                                        <%=facultades[i].Nombre%>
                                    </option>
                                    <%}else{%>
                                        <option>
                                            <%=facultades[i].Nombre%>
                                        </option>
                                        <%}}%>
                        </select>
                    </div>
                </form>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre de la carrera</th>
                    </tr>

                    <% if (errorMessage.length > 0) { %>
                        <tr>
                            <th class="alert alert-danger">
                                <%= errorMessage %>
                            </th>
                        </tr>
                        <% } %>
                            <% if (succesfulMessage.length > 0) { %>
                                <tr>
                                    <th class="alert alert-success">
                                        <%= succesfulMessage %>
                                    </th>
                                </tr>
                                <% } %>

                </thead>
                <tbody>
                    <%  if (typeof(carreras) != 'undefined' ){%>
                        <% for(i=0;i<carreras.length;i++){ %>
                            <tr>
                                <th>
                                    <%= carreras[i].Carrera %>
                                </th>
                            </tr>
                            <% } %>
                                <% } %>
                </tbody>
            </table>
        </div>

        <% include partials/footer.ejs %>
            <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
            <script>
                window.jQuery || document.write('<script src="js/vendor/jquery-1.11.2.min.js"><\/script>')
            </script>
            <script src="js/vendor/bootstrap.min.js"></script>
            <script src="js/main.js"></script>
</body>

</html>